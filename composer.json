{
    "name": "hrabja/oc-queue",
    "description": "Implementation of laravel queues into opencart",
    "keywords": [
        "hrabja",
        "oc-queue"
    ],
    "homepage": "https://github.com/hrabja/oc-queue",
    "license": "MIT",
    "authors": [
        {
            "name": "hrabja",
            "email": "hrabovskyjan1@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "illuminate/queue": "^10.13"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "friendsofphp/php-cs-fixer": "^3.13",
        "spatie/ray": "^1.28"
    },
    "autoload": {
        "psr-4": {
            "Hrabja\\OcQueue\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Hrabja\\OcQueue\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
            "test-coverage": "vendor/bin/phpunit --coverage",
        "format": "vendor/bin/php-cs-fixer fix --config=.php-cs-fixer.dist.php --allow-risky=yes"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
